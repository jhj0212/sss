body {
    width: 100%;
    height: 100%;
    background: #FAFAFA;
}


/*父容器*/

.container {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    font-size: .875rem;
    background: url('../images/orderCancel/bg.png');
    background-size: cover;
}


/*二维码容器*/

#QR {
    width: 100%;
    height: 35%;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
    justify-content: center;
    -ms-align-items: center;
    align-items: center;
}

#QR img {
    width: 5rem;
    height: 5rem;
    border-radius: .15rem;
}


/*按键容器*/

#btnContainer {
    width: 100%;
    height: 65%;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
    justify-content: center;
    -ms-align-items: center;
    align-items: center;
}

#btnContainer .cancel,
#btnContainer .confirm {
    width: 9.375rem;
    height: 2.0625rem;
    border: none;
    outline: none;
    transform: scale(1.4);
}

#btnContainer .confirm {
    background: url('../images/orderCancel/confirm.png');
    background-size: cover;
}

#btnContainer .cancel {
    margin: -4rem 0 4rem 0;
    background: url('../images/orderCancel/cancel.png');
    background-size: cover;
}
