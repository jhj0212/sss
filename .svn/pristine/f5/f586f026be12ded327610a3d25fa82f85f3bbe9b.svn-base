body {
    width: 100%;
    height: 100%;
    background: #FAFAFA;
}


/*父容器*/

.container {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    font-size: .875rem;
    background: #FF4E30;
    position: relative;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
    justify-content: space-between;
    -ms-align-items: center;
    align-items: center;
}


/*会员卡图片*/

#imgContainer {
    width: 70%;
    height: 25%;
    margin: 0 auto;
    position: absolute;
    top: 4%;
}

#imgContainer img {
    width: 100%;
    height: 100%;
    position: relative;
}

#imgContainer p {
    color: #fff;
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    font-weight: bold;
}


/*各种信息容器*/

#msgContainer {
    width: 90%;
    height: 80%;
    background: url('../images/memberCardNumber/bg.png');
    background-size: cover;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
    justify-content: center;
    -ms-align-items: center;
    align-items: center;
}


/*VISA*/

#msgContainer .msg_show {
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: row;
    -moz-flex-direction: row;
    -ms-flex-direction: row;
    -o-flex-direction: row;
    flex-direction: row;
    justify-content: center;
    -ms-align-items: center;
    align-items: center;
    width: auto;
    height: : 1rem;
    box-shadow: 1px 1px 2px #999;
    background: #eee;
    padding: .5rem 1rem;
    border-radius: 1rem;
    font-size: .875rem;
    color: #535353;
    margin-bottom: 1.5rem;
}

#msgContainer .msg_show img {
    width: 1.5rem;
    height: 1rem;
    margin-top: 2px;
    margin-right: .2rem;
}


/*地址、电话容器*/

#msgContainer .msg_msg {
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: row;
    -moz-flex-direction: row;
    -ms-flex-direction: row;
    -o-flex-direction: row;
    flex-direction: row;
    justify-content: flex-start;
    -ms-align-items: center;
    align-items: center;
    width: 90%;
    height: 2rem;
    border-radius: .2rem;
    background: #fff;
    border: 1px solid #ddd;
    margin-bottom: 1.5rem;
}

#msgContainer .msg_msg img {
    width: 1.2rem;
    height: 1.2rem;
    margin: 0 .5rem;
}

#msgContainer .msg_msg .msg_border {
    display: block;
    height: 1rem;
    width: 1px;
    border-right: 2px solid #797979;
    -webkit-flex: 1;
    -moz-flex: 1;
    -ms-flex: 1;
    -o-flex: 1;
    flex: 1;
    text-align: right;
    margin-right: .5rem;
}

#msgContainer .msg_QR {
    width: 8rem;
    height: 8rem;
}

#msgContainer .msg_QR img {
    width: 100%;
    height: 100%;
}
