body {
    width: 100%;
    height: 100%;
    background: #fff;
}


/*父容器*/

.container {
    width: 100%;
    height: 100%;
    font-size: .875rem;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
}
/*头部*/
#msgHeader{
    height: 2.5rem;
    line-height: 2.5rem;
    color: #fff;
    background: #FF4E30;
    padding-left: 5%;
    text-align: left;
}
/*信息容器*/
#msgContainer{
    width: 90%;
    height: auto;
    border: 1px solid #ddd;
    margin: 1rem auto 0;
    padding: .5rem;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
    justify-content: space-around;
    -ms-align-items: center;
    align-items: center;
}
#msgContainer>div{
    width: 100%;
    height: 2.5rem;
    line-height: 2.5rem;
    border-bottom: 1px dashed #ddd;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: row;
    -moz-flex-direction: row;
    -ms-flex-direction: row;
    -o-flex-direction: row;
    flex-direction: row;
    -ms-align-items: center;
    align-items: center;
}
#msgContainer>div:last-child{
    border-bottom: none;
}
#msgContainer>div img{
    height: 1.5rem;
    width: 1.5rem;
    margin: 0 1rem 0 0;
}