body {
    width: 100%;
    height: 100%;
    background: #FAFAFA;
}


/*父容器*/

.container {
    width: 100%;
    height: 100%;
    font-size: .875rem;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
}


/*头部*/

#headerContainer {
    width: 100%;
    height: 3rem;
    line-height: 3rem;
    background: #FF4E30;
    font-size: 1rem;
}

#headerContainer h3 {
    padding-left: 5%;
    color: #fff;
}


/*表单*/

#form {
    width: 100%;
    margin: 0 auto;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
}

#form>p {
    margin: 1rem 0;
    padding-left: 5%;
    font-size: 1rem;
}

#form>div {
    padding-left: 5%;
    margin: 1rem 0;
}

#form>div input {
    margin: 0 .5rem 1rem 0;
}

#form>div> p {
    padding: 0 5%;
    color: #777;
}


/*提交按钮*/

#submitBtn {
    width: 100%;
    height: 2.5rem;
    line-height: 2.5rem;
    position: fixed;
    bottom: 0;
    border: none;
    color: #fff;
    background: #FF4E30;
    font-size: 1rem;
    font-weight: bold;
    outline: none;
}
