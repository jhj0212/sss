body {
    width: 100%;
    height: 100%;
    background: #fff;
}


/*父容器*/

.container {
    width: 100%;
    height: 100%;
    font-size: .875rem;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
}
/*图片容器*/
#imgContainer{
    padding-top: 2rem;
    width: 100%;
    height: 40%;
    border-bottom: 2px solid #FF4E30;
    background: #eee;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    justify-content: center;
    -ms-align-items: center;
    align-items: center;
}
#imgContainer img{
    width: auto;
    height: 100%;
}
/*信息容器*/
#msgContainer{
    margin-top: 1rem;
    width: 100%;
    height: 60%;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: column;
    -moz-flex-direction: column;
    -ms-flex-direction: column;
    -o-flex-direction: column;
    flex-direction: column;
}
#msgContainer a{
    text-decoration: none;
    margin: 0 auto;
    width: 80%;
    height: 15%;
    color: #333;
    margin-bottom: 1rem; 
    background: #eee;
    border-radius: .2rem;
    -webkit-box-shadow: 1px 1px 2px 1px #ddd;
    box-shadow: 1px 1px 2px 1px #ddd;
}
#msgContainer a>div{
    width: 100%;
    height: 100%;
    /*flex的兼容布局*/
    display: -webkit-box;
    display: -moz-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-flex-direction: row;
    -moz-flex-direction: row;
    -ms-flex-direction: row;
    -o-flex-direction: row;
    flex-direction: row;
    justify-content: center;
    -ms-align-items: center;
    align-items: center;
}
#msgContainer a>div img{
    width: 2rem;
    height: 2rem;
    margin-right: .5rem;
}